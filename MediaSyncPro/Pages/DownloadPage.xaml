<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             Title="Download"
             x:Class="MediaSyncPro.Pages.DownloadPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Frame HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="0" BackgroundColor="Black" BorderColor="White" Grid.Row="0" Margin="4">
            <Entry x:Name="linkTextBox" TextColor="White" PlaceholderColor="DimGray" Placeholder="Type a link to Spotify playlist or song..."/>
        </Frame>
        <Frame Grid.Row="1" Margin="4" BorderColor="White" BackgroundColor="Black">
            <Grid>
                <Label HorizontalOptions="Center" Text="Downloading tab"/>
                <ScrollView Margin="0, 20, 0, 0">
                    <VerticalStackLayout Spacing="10" x:Name="downloadInformationStackLayout">
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Frame>
        <Button Grid.Row="2" Margin="4" BorderColor="White" BorderWidth="1" BackgroundColor="#050505" TextColor="White" Text="Start downloading..." Clicked="StartDownloadingButton_Clicked"/>
    </Grid>
</ContentPage>