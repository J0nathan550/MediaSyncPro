<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="Black"
             x:Class="MediaSyncPro.Pages.HelpPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollView>
            <VerticalStackLayout>
                <Image WidthRequest="200" HeightRequest="200" Source="sans.gif" IsAnimationPlaying="True"/>
                <Label 
            x:Name="text"
            FontSize="23"
            Margin="10"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            FontAttributes="Bold" />
            </VerticalStackLayout>
        </ScrollView>
        <Button Clicked="SupportButton_Clicked" Grid.Row="1" Text="Support me!" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Black" Padding="0" BorderColor="White" BorderWidth="1" TextColor="White"/>
    </Grid>
</ContentPage>